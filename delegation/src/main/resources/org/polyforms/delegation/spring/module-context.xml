<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:polyforms="http://www.polyforms.org/schema"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.polyforms.org/schema
		http://www.polyforms.org/schema/polyforms.xsd">

	<bean id="modelMapper" class="org.polyforms.delegation.spring.converter.ModelMapperFactoryBean">
		<property name="fieldMatching" value="true"/>
		<property name="fieldAccessLevel" value="PRIVATE" />
		<property name="converters">
			<polyforms:beansOf
				class="org.modelmapper.spi.ConditionalConverter" />
		</property>
	</bean>

	<bean id="conversionService"
		class="org.springframework.context.support.ConversionServiceFactoryBean">
		<property name="converters">
			<polyforms:beansOf
				class="org.springframework.core.convert.converter.GenericConverter" />
		</property>
	</bean>
</beans>